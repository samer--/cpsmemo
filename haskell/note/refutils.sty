	\expandafter\gdef\csname #1lab\endcsname##1{\label{#1:##1}}%
	\expandafter\gdef\csname #1rf\endcsname##1{#2{\ref{#1:##1}}}%
}

\DefineLabelClass{fig}{\tag{Fig}}
